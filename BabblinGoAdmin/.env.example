DATABASE_URI=mongodb://mongo/BabblinGoAdmin
PAYLOAD_SECRET=CHANGE_ME
# Aliyun OSS Configuration
OSS_ACCESS_KEY_ID=YOUR_OSS_ACCESS_KEY_ID
OSS_ACCESS_KEY_SECRET=YOUR_OSS_ACCESS_KEY_SECRET
OSS_BUCKET=bucket-name
OSS_REGION=oss-cn-beijing
OSS_ENDPOINT=https://oss-cn-beijing.aliyuncs.com
OSS_PUBLIC_URL=https://bucket-name.oss-cn-beijing.aliyuncs.com
# SMTP config for Aliyun
SMTP_HOST=smtp.qiye.aliyun.com
SMTP_PORT=465
SMTP_USER=your_aliyun_username
SMTP_PASS=your_aliyun_password
SMTP_FROM=your_verified_email@yourdomain.com

# Transcription Service Configuration
# Choose 'openai' or 'aliyun'
TRANSCRIPTION_SERVICE=openai

# OpenAI Configuration (Required if TRANSCRIPTION_SERVICE=openai)
OPENAI_API_KEY=sk-...

# Aliyun Intelligent Speech Interaction (Required if TRANSCRIPTION_SERVICE=aliyun)
# Note: This is separate from OSS credentials
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_APP_KEY=your_nls_app_key
